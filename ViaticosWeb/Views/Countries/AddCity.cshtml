@model ViaticosWeb.Models.CityViewModel

@{
    ViewData["Title"] = "Create City";
}

<h2>Create</h2>

<h4>City of country : @Model.Country.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCity" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CountryId" />

            <partial name="_City" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.CountryId" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

